<div class=" hero-unit">
  <form action="">
    <div class="controls controls-row">
        <input class="span8" id="youtube_url" type="text" value="http://www.youtube.com/watch?v=DE9NsrKzSq8" >
        <button id="load-video-btn" type="button" class="btn span2" >Load Video</button>
    </div>
  </form>

  <div id="video"></div>
  <div id="slider"></div>
  <div id="controls">
    <button class='play btn'>PLAY</button>
    <button class='pause btn'>PAUSE</button>
  </div>
  <div id='info'>
    Start: <span class="start-time">--:--</span> <br>
    Current: <span class="current-time">--:--</span> <br>
    End: <span class="end-time">--:--</span>
  </div>

  <%= form_for @video do |f| %>
      <%= f.text_field :name, :placeholder => "Give your clip a name" %> <br />
      <%= f.hidden_field :youtube_id, :value => "DE9NsrKzSq8" %> <br />
      <%= f.hidden_field :start_time, :value => 470 %> <br />
      <%= f.hidden_field :end_time, :value => 475 %> <br />
      <%= f.submit 'Create my Clip', :class => 'btn btn-info' %>
  <% end %>

</div>



