<div class="center hero-unit">
  <h1>Roller</h1>

  <form action="">
      <input id="youtube_url" type="text" value="http://www.youtube.com/watch?v=DE9NsrKzSq8" class="xxlarge">
      <button id="load-video-btn" type="button" class="btn">Load Video</button>
  </form>

  <div id="player"></div>
  <div id="slider-range" class="medium"></div><div id="echo"></div>
  <div id="current-time"></div>

  <%= form_for @video do |f| %>
      <%= f.text_field :name, :placeholder => "Give your clip a name" %> <br />
      <%= f.hidden_field :youtube_id, :value => "DE9NsrKzSq8" %> <br />
      <%= f.hidden_field :start_time, :value => 470 %> <br />
      <%= f.hidden_field :end_time, :value => 475 %> <br />
      <%= f.submit %>
  <% end %>

  <%= link_to "All Videos", videos_path %>

</div>

